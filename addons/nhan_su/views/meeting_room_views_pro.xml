        <field name="name">meeting.room.kanban</field>
        <field name="model">meeting.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" default_group_by="location_id">
                <field name="id"/>
                <field name="code"/>
                <field name="name"/>
                <field name="location_id"/>
                <field name="capacity"/>
                <field name="state"/>
                <field name="image"/>
