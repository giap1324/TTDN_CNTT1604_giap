                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <!-- Header with State -->
                            <div class="p-3 rounded-top" t-attf-style="background: linear-gradient(135deg, #{record.state.raw_value == 'available' ? '#11998e, #38ef7d' : '#f093fb, #f5576c'});">
