                                    <strong style="font-size: 14px;">
                                        <i t-if="record.state.raw_value == 'available'" class="fa fa-check-circle mr-1"/>
                                        <i t-if="record.state.raw_value == 'maintenance'" class="fa fa-wrench mr-1"/>
                                        <field name="state"/>
                                    </strong>
                                    <span class="badge" style="background: rgba(255,255,255,0.25); font-size: 11px;">
                                        <field name="code"/>
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Image -->
                            <div class="text-center p-3" style="background: #f8f9fa;">
                                <img t-att-src="kanban_image('meeting.room', 'image', record.id.raw_value)" alt="Room" style="max-height: 120px; border-radius: 8px;"/>
                            </div>
                            
                            <!-- Body -->
                            <div class="p-3">
                                <div class="font-weight-bold mb-2" style="font-size: 15px;">
                                    <field name="name"/>
                                </div>
                                
                                <div class="text-muted small mb-2">
                                    <i class="fa fa-map-marker mr-1"/> <field name="location_id"/>
                                </div>
                                
                                <!-- Capacity -->
                                <div class="mb-2 p-2 rounded" style="background: linear-gradient(135deg, rgba(102,126,234,0.1) 0%, rgba(118,75,162,0.1) 100%);">
