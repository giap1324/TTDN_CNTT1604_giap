<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Meeting Room Tree View -->
        <record id="view_meeting_room_tree" model="ir.ui.view">
            <field name="name">meeting.room.tree</field>
            <field name="model">meeting.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="capacity"/>
                    <field name="state" widget="badge" decoration-success="state=='available'" decoration-warning="state=='maintenance'"/>
                    <field name="manager_id"/>
                </tree>
            </field>
        </record>

        <!-- Meeting Room Form View -->
        <record id="view_meeting_room_form" model="ir.ui.view">
            <field name="name">meeting.room.form</field>
            <field name="model">meeting.room</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_maintenance" string="Bảo trì" type="object" attrs="{'invisible': [('state', '==', 'maintenance')]}"/>
                        <button name="action_available" string="Sẵn sàng" type="object" attrs="{'invisible': [('state', '==', 'available')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="available,maintenance"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên phòng"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin cơ bản">
                                <field name="code"/>
                                <field name="location_id"/>
                                <field name="floor"/>
                                <field name="capacity"/>
                                <field name="area"/>
                                <field name="manager_id"/>
                            </group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                        <group string="Thiết bị">
                            <field name="has_projector"/>
                            <field name="has_screen"/>
                            <field name="has_sound_system"/>
                            <field name="has_wifi"/>
                            <field name="has_whiteboard"/>
                        </group>
                        <group colspan="4">
                            <field name="equipment_notes" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Lịch đặt phòng">
                                <field name="booking_ids" nolabel="1">
                                    <tree>
                                        <field name="subject"/>
                                        <field name="organizer_id"/>
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                        <field name="duration"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group colspan="4">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Meeting Room Search View -->
        <record id="view_meeting_room_search" model="ir.ui.view">
            <field name="name">meeting.room.search</field>
            <field name="model">meeting.room</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="location_id"/>
                    <filter string="Sẵn sàng" name="available" domain="[('state', '=', 'available')]"/>
                    <filter string="Bảo trì" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                    <filter string="Có máy chiếu" name="has_projector" domain="[('has_projector', '=', True)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_meeting_room" model="ir.actions.act_window">
            <field name="name">Quản lý phòng họp</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">meeting.room</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_meeting_room_search"/>
        </record>
    </data>
</odoo>
