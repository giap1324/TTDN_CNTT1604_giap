<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== ASSET KANBAN VIEW ==================== -->
    <record id="view_asset_kanban" model="ir.ui.view">
        <field name="name">asset.kanban</field>
        <field name="model">asset</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" default_group_by="category_id">
                <field name="id"/>
                <field name="asset_code"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="location_id"/>
                <field name="state"/>
                <field name="assigned_to_id"/>
                <field name="current_value"/>
                <field name="purchase_date"/>
                <field name="image"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <!-- Header with State Color -->
                            <div class="p-3 rounded-top" t-attf-style="background: linear-gradient(135deg, #{record.state.raw_value == 'available' ? '#11998e, #38ef7d' : record.state.raw_value == 'in_use' ? '#4facfe, #00f2fe' : record.state.raw_value == 'maintenance' ? '#f093fb, #f5576c' : record.state.raw_value == 'damaged' ? '#ff416c, #ff4b2b' : '#485563, #29323c'});">
                                <div class="d-flex justify-content-between align-items-center text-white">
                                    <strong style="font-size: 13px;">
                                        <i t-if="record.state.raw_value == 'available'" class="fa fa-check-circle mr-1"/>
                                        <i t-if="record.state.raw_value == 'in_use'" class="fa fa-user mr-1"/>
                                        <i t-if="record.state.raw_value == 'maintenance'" class="fa fa-wrench mr-1"/>
                                        <i t-if="record.state.raw_value == 'damaged'" class="fa fa-exclamation-triangle mr-1"/>
                                        <i t-if="record.state.raw_value == 'disposed'" class="fa fa-trash mr-1"/>
                                        <field name="state"/>
                                    </strong>
                                    <span class="badge" style="background: rgba(255,255,255,0.25); font-size: 10px;">
                                        <field name="asset_code"/>
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Image -->
                            <div class="text-center p-3" style="background: #f8f9fa;">
                                <img t-att-src="kanban_image('asset', 'image', record.id.raw_value)" alt="Asset" style="max-height: 120px; border-radius: 8px;"/>
                            </div>
                            
                            <!-- Body -->
                            <div class="p-3">
                                <div class="font-weight-bold mb-2" style="font-size: 14px;">
                                    <field name="name"/>
                                </div>
                                
                                <div class="text-muted small mb-1">
                                    <i class="fa fa-tag mr-1"/> <field name="category_id"/>
                                </div>
                                <div class="text-muted small mb-1">
                                    <i class="fa fa-map-marker mr-1"/> <field name="location_id"/>
                                </div>
                                <div class="text-muted small mb-2" t-if="record.assigned_to_id.raw_value">
                                    <i class="fa fa-user mr-1"/> <field name="assigned_to_id"/>
                                </div>
                                
                                <!-- Value -->
                                <div class="p-2 rounded" style="background: linear-gradient(135deg, rgba(102,126,234,0.1) 0%, rgba(118,75,162,0.1) 100%);">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-muted small">üí∞ Gi√° tr·ªã</span>
                                        <span class="font-weight-bold" style="color: #667eea;">
                                            <field name="current_value" widget="monetary"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

