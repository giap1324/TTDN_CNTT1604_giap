<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job để tự động cập nhật trạng thái cuộc họp -->
        <record id="ir_cron_update_meeting_status" model="ir.cron">
            <field name="name">Cập nhật trạng thái cuộc họp</field>
            <field name="model_id" ref="model_meeting_room_booking"/>
            <field name="state">code</field>
            <field name="code">model._check_ongoing_meetings()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
